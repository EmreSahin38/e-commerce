<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ikincielkralı</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ikincielkralı.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 py-3" style="min-height:90px; background: #FFD700;">
            <div class="container-fluid p-0">
                <div class="d-flex align-items-center" style="height:100%; background: #FFD700;">
                    <a class="navbar-brand d-flex align-items-center ps-3 pe-4" asp-area="" asp-controller="Home" asp-action="Index" style="height:90px;">
                        <img src="/uploads/ikincielkralı%20logo.png" alt="ikincielkralı" style="height:80px; width:auto; object-fit:contain;">
                    </a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center position-relative">
                    <ul class="navbar-nav flex-grow-1 justify-content-center" style="font-size:1.15rem;">
                        <li class="nav-item">
                            <form class="d-flex" asp-controller="Listing" asp-action="Index" method="get" style="margin-right: 1rem;">
                                <input class="form-control me-2" type="search" name="search" value="@Context.Request.Query["search"]" placeholder="Kelime ile ara..." aria-label="Search">
                                <button class="btn btn-outline-success" type="submit">Ara</button>
                            </form>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Listing" asp-action="Index">İlanlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Listing" asp-action="Create">İlan Oluştur</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Listing" asp-action="MyListings">İlanlarım</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto position-absolute end-0 top-0 mt-2 me-2">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-flex">
                                    <button type="submit" class="btn btn-sm" style="background-color:#ffb3b3; color:#900;">Çıkış Yap</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-success btn-sm" href="/Account/Login" style="margin-right:8px;">Giriş Yap / Kayıt Ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ikincielkralı - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
